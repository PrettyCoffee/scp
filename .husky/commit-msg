#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

npx --no -- commitlint --edit ${1} ||
(
    echo ""
    echo "‚ùå Your commit message does not apply the conventional commits standard!"
    echo "üìñ Visit https://www.conventionalcommits.org/ for details."
    echo "üßæ TL;DR:"
    echo "  - Pattern: <type>[OptionalScope]: <Description>"
    echo "  - Examples:"
    echo "      feat(TextInput): Create component"
    echo "      chore: Update dependencies"
    echo "  - Available types:"
    echo "      feat:      Feature addition"
    echo "      fix:       Bug fix"
    echo "      docs:      Documentation only changes"
    echo "      refactor:  Code cleanup, neither feat nor fix"
    echo "      revert:    Revert a change"
    echo "      perf:      Performance improvements"
    echo "      chore:     Change to tooling, build process, dependencies etc"
    echo ""
    echo "üí° Hint: To change a commit message, have a look at \"git commit --amend\" and \"git rebase -i\"."
    echo ""
    false
)
